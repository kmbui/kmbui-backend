    "dev": "bun run --watch src/index.ts"
  },
  "dependencies": {
    "@elysiajs/openapi": "^1.3.10",
    "@libsql/client": "^0.15.14",
    "drizzle-kit": "^0.31.4",
    "drizzle-orm": "^0.44.5",
    "drizzle-typebox": "^0.3.3",
    "elysia": "latest",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "bun-types": "latest",
    "dotenv": "^17.2.2"
  },
  "overrides": {
    "@sinclair/typebox": "0.34.0"
  },
  "module": "src/index.js"
}
